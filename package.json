{
  "name": "openshift-site-plugin",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:skupperproject/openshift-site-plugin.git",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && NODE_ENV=production yarn ts-node node_modules/.bin/webpack",
    "start": "yarn clean && yarn ts-node node_modules/.bin/webpack serve",
    "start-console": "./start-console.sh",
    "ts-node": "ts-node -O '{\"module\":\"commonjs\"}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,css}'",
    "lint": "TIMING=1 eslint --cache",
    "lint-fix": "yarn lint --fix",
    "build-and-push-image": "PUSH=1 ./build-image.sh"
  },
  "dependencies": {
    "@patternfly/patternfly": "5.4.2",
    "@patternfly/react-component-groups": "^5.5.8",
    "@patternfly/react-core": "5.4.12",
    "@patternfly/react-icons": "5.4.2",
    "@patternfly/react-table": "5.4.14",
    "@tanstack/react-query": "4.36.1",
    "axios": "1.7.9",
    "react-dom": "17.0.2",
    "yaml": "2.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@openshift-console/dynamic-plugin-sdk": "1.8.0",
    "@openshift-console/dynamic-plugin-sdk-webpack": "1.3.0",
    "@types/node": "^22.10.6",
    "@types/react-dom": "^18.3.5",
    "@types/react-router-dom": "^5.3.3",
    "@vitest/eslint-plugin": "^1.1.25",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "file-loader": "^6.2.0",
    "globals": "^15.14.0",
    "pluralize": "^8.0.0",
    "prettier": "^3.4.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "webpack": "5.97.1",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "engines": {
    "node": ">=18.17.1",
    "yarn": ">=1.22.10"
  }
}
